<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.or.nextit.springmvc.login.LoginMapper">
    <resultMap id="membroMap" type="membroVO">
        <id property="id" column="id"/>
        <result property="password" column="password"/>
        <result property="name" column="name"/>
        <result property="email" column="email"/>
        <result property="mobileNumber" column="mobile_number"/>
        <result property="registerDate" column="register_date"/>
        <result property="modifiedDate" column="modified_date"/>
        <result property="enabled" column="enabled"/>
        <collection property="authorities" resultMap="authorityMap"/>
    </resultMap>
    <resultMap id="authorityMap" type="authorityVO">
        <result property="membroId" column="id"/>
        <result property="authority" column="authority"/>
    </resultMap>
    <!-- 로그인 할 때 사용되는 쿼리 -->
    <select id="selectMembroById" resultMap="membroMap">
        SELECT
            A.ID,
            A.PASSWORD,
            A.NAME,
            A.EMAIL,
            A.MOBILE_NUMBER,
            A.REGISTER_DATE,
            A.MODIFIED_DATE,
            A.ENABLED,
            B.AUTHORITY
        FROM
            MEMBRO A
            LEFT OUTER JOIN AUTHORITIES B
            ON A.ID = B.MEMBRO_ID
        WHERE
            A.ID = #{id}
    </select>
    <insert id="registerMembro" parameterType="membroVO">
        INSERT INTO
            MEMBRO
            (ID, PASSWORD, NAME, EMAIL, MOBILE_NUMBER)
        VALUES
            (#{id}, #{password}, #{name}, #{email}, #{mobileNumber})
    </insert>
    <insert id="registerAuthority" parameterType="authorityVO">
        INSERT INTO
            AUTHORITIES
            (MEMBRO_ID, AUTHORITY)
        VALUES
            (#{membroId}, #{authority})
    </insert>
</mapper>




